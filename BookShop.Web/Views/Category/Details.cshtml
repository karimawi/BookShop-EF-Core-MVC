@model BookShop.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatOrder)
        </dd>
        <dt class="col-sm-2">
            Is Active
        </dt>
        <dd class="col-sm-10">
            @(Model.IsDeleted ? "No" : "Yes")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
